---
import Layout from "../layout/Layout.astro";
import * as Content from "../content/Projects.md";

interface project {
  imageUrl: string;
  name: string;
  description: string;
  url: string;
}

const projects: Array<project> = Content.frontmatter.Projects;
---

<Layout>
  {
    projects.length == 0 ? (
      <div class="flex justify-center items-center h-full">
        <div class="p-4 bold text-emerald-900 font-bold text-xl italic">
          Nog geen projecten
        </div>
      </div>
    ) : (
      ""
    )
  }
  <div class="mt-20 grid-cols-3 grid justify-around gap-4">
    {
      projects.map((project) => (
        <div
          class="grid-cols-3 rounded-lg overflow-hidden shadow-lg hover:shadow-xl from-white to-gray-100 hover:bg-gray-200 h-52"
          style={`background-image: url(${project.imageUrl}); background-size: cover;`}
        >
          <div class=" p-4">
            <h3 class="text-lg font-medium text-gray-900">{project.name}</h3>
            <p class="mt-2 text-gray-600">{project.description}</p>
            <div class="mt-4">
              <a
                href={project.url}
                class="text-base font-medium text-blue-600 hover:text-blue-500"
              >
                Bekijk project &rarr;
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Layout>
